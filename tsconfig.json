{
    "compilerOptions": {
        "target": "ES2017",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "react-jsx",
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "@styles/*": ["./src/styles/*"],
            "@i18n/*": ["./src/i18n/*"],
            "@core/*": ["./src/core/*"],
            "@atoms/*": ["./src/components/atoms/*"],
            "@molecules/*": ["./src/components/molecules/*"],
            "@organisms/*": ["./src/components/organisms/*"],
            "@templates/*": ["./src/components/templates/*"],
            "@public/*": ["./public/*"]
        }
    },
    "include": [
        "next-env.d.ts",
        "mantine.d.ts",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts",
        ".next/dev/types/**/*.ts",
        "**/*.mts",
        "src/core/themes/MantineTheme"
    ],
    "exclude": ["node_modules"]
}
